            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Название:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Width="150"></TextBox>

        <Label Grid.Row="1" Grid.Column="0">Название:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Width="150"></TextBox>

        <Label Grid.Row="2" Grid.Column="0">Название:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Width="150"></TextBox>

        <Label Grid.Row="4" Grid.Column="0">Название:</Label>
        <TextBox Grid.Row="4" Grid.Column="1" Width="150"></TextBox>

    </Grid>
</Page>
