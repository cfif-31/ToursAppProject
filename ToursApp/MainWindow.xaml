<Window x:Class="ToursApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1300" MinHeight="500" MinWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Image Source="/Resources/logo_full_color.png" />

            <Button Content="Туры" Click="ToursMenu"/>
            <Button Content="Отели" Click="HotelsMenu"/>
        </StackPanel>
        <Frame Grid.Column="1" Name="FrameNav" NavigationUIVisibility="Hidden" Margin="15"></Frame>
    </Grid>
</Window>
